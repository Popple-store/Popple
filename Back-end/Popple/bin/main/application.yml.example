spring:
  application:
    name: Popple
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: ${DB_URL} # 데이터베이스 URL을 환경 변수로 설정
    username: ${DB_USERNAME} # 데이터베이스 사용자 이름을 환경 변수로 설정
    password: ${DB_PASSWORD} # 데이터베이스 비밀번호를 환경 변수로 설정
  jpa:
    generate-ddl: true
    show-sql: true
    open-in-view: false
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect
  sql:
    init:
      mode: never
  upload:
    location: ${UPLOAD_LOCATION} # 파일 업로드 위치를 환경 변수로 설정
  mvc:
    pathmatch:
      matching-strategy: ant-path-matcher
  security:
    user:
      name: ${SECURITY_USER_NAME} # 기본 사용자 이름 (환경 변수로 설정)
      password: ${SECURITY_USER_PASSWORD} # 기본 사용자 비밀번호 (환경 변수로 설정)

# jwt 토큰 발행 기초 설정
jwt:
    issuer: team-popple
    secret_key: ${JWT_SECRET_KEY} # JWT 비밀 키 (노출되면 심각한 보안 문제 발생, 환경 변수로 설정)
    access_duration: 1_800_000 # 30분 (30 * 60 * 1000)
    refresh_duration: 86_400_000 # 24시간 (24 * 60 * 60 * 1000)

oauth2:
  clients:
    google:
      client-id: ${GOOGLE_CLIENT_ID} # Google OAuth 클라이언트 ID (환경 변수로 설정)
      client-secret: ${GOOGLE_CLIENT_SECRET} # Google OAuth 클라이언트 비밀 키 (환경 변수로 설정)
      redirect-uri: http://localhost:5173/oauth/google
      token-uri: https://oauth2.googleapis.com/token
      user-info-request-uri: https://www.googleapis.com/oauth2/v3/userinfo
    kakao:
      client-id: ${KAKAO_CLIENT_ID} # Kakao OAuth 클라이언트 ID (환경 변수로 설정)
      client-secret: ${KAKAO_CLIENT_SECRET} # Kakao OAuth 클라이언트 비밀 키 (환경 변수로 설정)
      redirect-uri: http://localhost:5173/oauth/kakao
      token-uri: https://kauth.kakao.com/oauth/token
      user-info-request-uri: https://kapi.kakao.com/v2/user/me

springdoc:
  api-docs:
    path: /v3/api-docs
  swagger-ui:
    path: /swagger-ui.html
